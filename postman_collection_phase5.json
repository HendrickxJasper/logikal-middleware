                {
                    "name": "Login Client",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"access_token\", jsonData.access_token);",
                                    "pm.environment.set(\"client_id\", jsonData.client_info.client_id);",
                                    "pm.environment.set(\"client_name\", jsonData.client_info.name);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
